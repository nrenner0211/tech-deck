<form class="login-form">
  <div class="field">
    <label for="email-login" class="label">email:</label>
    <input type="text" id="email-login" placeholder="Email" />
  </div>
  <div class="field">
    <label for="password-login" class="label">password:</label>
    <input type="password" id="password-login" placeholder="Password" />
  </div>
  <div>
    <button class="button" type="submit">login</button>
  </div>
</form>

<form class="signup-form">
